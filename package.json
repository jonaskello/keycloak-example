{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "html-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "tsc-watch": "^2.1.2",
    "typescript": "^3.4.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-html-plugin": "^0.1.1"
  },
  "resolutions": {
    "graphql": "14.2.1",
    "@types/graphql": "14.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tslint",
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "scripts": {
    "start": "run-p -l w c",
    "c": "webpack-dev-server -w",
    "w": "tsc -b packages && tsc-watch -b packages --preserveWatchOutput --onSuccess \"node -r dotenv/config packages/server/lib/server.js\" --onFailure \"echo >>> Compilation Failed\"",
    "build": "tsc -b packages",
    "clean-node-modules": "rm -rf node_modules && rm -rf packages/*/node_modules"
  }
}